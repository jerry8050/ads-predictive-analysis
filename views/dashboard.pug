doctype html
html(class='no-js' lang)
    head
        meta(charset="utf-8")
        meta(http-equiv="x-ua-compatible" content="ie=edge")
        title Adoge. Such Forecast. Much Media. So Wow.
        meta(name="description" content="Make Ads Great Again.")
        meta(name="viewport" content="width=device-width, initial-scale=1")

        link(rel="stylesheet" href="css/main.css")
        link(rel="stylesheet" href="css/styles.css")
        link(href="https://fonts.googleapis.com/css?family=Playfair+Display:900i" rel="stylesheet")

        script(src='js/tablesort.min.js')
        <!-- Include sort types you need, check /js/sorts -->
        script(src='js/sorts/tablesort.number.min.js')
        script(src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous")

    body
        header(class="clearfix")
            figure(class="doge")
                img(src="img/doge.jpg" alt="")
            div(class="hgroup")
                h3 Powered by Adoge
                h1 ADoge
                h2 Such Forecast. Much Media. So Wow.

    main
        form(action="" method="" class="form")

            label(class="input")
                span Start date
                input(type="month" id="start" name="")

            label(class="input")
                span End date
                input(type="month" id="end" name="")

            fieldset
                legend Data Filters
                label
                    input(type='checkbox' name='agreement')
                    | Segment
                label
                    input(type="checkbox" name="")
                    | Industry
                label
                    input(type="checkbox" name="")
                    | Data Source Summary
                label
                    input(type="checkbox" name="")
                    | Month
                label
                    input(type="checkbox" name="")
                    | Quarter

            fieldset
                legend Select Predefined Range
                label
                    input(type="radio" name="range" value="ytd")
                    | YTD
                label
                    input(type="radio" name="range" value="py")
                    | Prior Year
                label
                    input(type="radio" name="range" value='pym')
                    | Prior Year by Month
                label
                    input(type="radio" name="range")
                    | Prior Month
                label
                    input(type="radio" name="range")
                    | MTD
                label
                    input(type="radio" name="range")
                    | Prior Week
                label
                    input(type="radio" name="range")
                    | Prior 30 days
                label
                    input(type="radio" name="range")
                    | Prior 60 days

        div(class="table-wrapper")
            table(class="results" cellspacing="0" id="table")
                thead
                    tr
                        th(data-sort-method='none') Segment
                        th MB Index
                        th MB Z-Score
                        th MB Capacity
                        th Ins Index
                        th Ins Z-Score
                        th Ins Capacity

                tbody

    footer
